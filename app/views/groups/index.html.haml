.container
  .group
    %h1 チャットグループ一覧
    .group_search
      .group_search_form
        = form_with url: groups_path do |f|
          = f.text_field :keyword, placeholder: 'チャットグループを検索', class: 'group_search_form_input'
          = f.submit '検索'
    .group_new
      = link_to new_group_path do
        %span.fa.fa-plus
  - if @groups_joining == []
    = @groups_lists_none
  - else
    %div.group_list
      %ul.group_list_table
        - @groups.each do |group|
          %li.group_list_table_item
            = link_to group_path(group.id) do
              = group.group_name 